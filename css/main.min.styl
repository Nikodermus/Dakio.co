@import 'nib'

vendor-prefixes = webkit moz o ms official
body = 'Helvetica Neue'
title = 'Nexa'
dk-purple = #7900E9
dk-purple-dark = #3f1e6b
dk-gray = #303030
dk-black = #151515

// Generales
@-ms-viewport
    width device-width

html
    box-sizing border-box
    font-size 16px
    font-family body
    color dk-gray
*
*:after
*:before
    margin 0
    padding 0
    box-sizing inherit
    transition all 0.3s ease
    &:hover
        transition all 0.3s ease
a
a:visited
a:focus
    text-decoration none
    color inherit
body
    font-family sans-serif
    font-size 1rem
    width 100%
    max-width 100vw
h1
h2
h3
h4
h5
h6
    font-weight bolder
    margin 0
    padding 0
    font-family title
img 
    width 100%
    max-width 100%
    
//Special Classes
.bold
    font-weight bolder
// Index


// Media Query
 
@media (min-width: 993px) //Desktop
    .hidden-xl
        display none
    
@media (max-width: 992px) and (min-width: 769px) //Tablet
    .hidden-mid
        display none
        
@media (max-width: 768px) //Mobile
    .hidden-xs
        display none